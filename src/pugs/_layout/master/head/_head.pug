meta(charset='UTF-8')
title=page.metas.title
meta(name='description' content=page.metas.description)
if !isProduction
    meta(name="robots" content="noindex, nofollow")

meta(http-equiv='X-UA-Compatible', content='IE=edge')
meta(name='viewport', content='width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0')
meta(name='msapplication-tap-highlight', content='no')

//- Twitter Card data
meta(name='twitter:card', content='summary')
meta(name='twitter:site', content=page.metas.twitter_id)
meta(name='twitter:title', content=page.metas.twitter_title)
meta(name='twitter:description', content=page.metas.twitter_description)
meta(name='twitter:image', content=page.metas.twitter_image)

//- Open Graph data
meta(property='og:title', content=page.metas.title)
meta(property='og:type', content='website')
meta(property='og:url', content=page.metas.url)
meta(property='og:image', content=page.metas.facebook_image)
meta(property='og:description', content=page.metas.description)
meta(property='og:site_name', content=page.metas.title)
meta(property='fb:app_id', content=page.metas.facebook_app_id)

//- favicon
link(rel='apple-touch-icon', sizes='57x57', href='/assets/images/favicon/'+page.metas.icon_57)
link(rel='apple-touch-icon', sizes='76x76', href='/assets/images/favicon/'+page.metas.icon_76)
link(rel='apple-touch-icon', sizes='114x114', href='/assets/images/favicon/'+page.metas.icon_114)
link(rel='apple-touch-icon', sizes='120x120', href='/assets/images/favicon/'+page.metas.icon_120)
link(rel='apple-touch-icon', sizes='144x144', href='/assets/images/favicon/'+page.metas.icon_144)
link(rel='apple-touch-icon', sizes='152x152', href='/assets/images/favicon/'+page.metas.icon_152)
link(rel='apple-touch-icon', sizes='180x180', href='/assets/images/favicon/'+page.metas.icon_180)
link(rel='icon', type="image/png", sizes='196x196', href='/assets/images/favicon/'+page.metas.icon_196)

//- windows settings
meta(name='application-name', content=page.metas.application_name)
meta(name='msapplication-TileImage', content=page.metas.icon_114)
meta(name='msapplication-TileColor', content=page.metas.ms_application_tile_color)

//- android settings
meta(name="theme-color" content=page.metas.theme_color)

link(rel='stylesheet', type='text/css', href='/css/common.css')
